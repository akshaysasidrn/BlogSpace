<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">Forgot your password?</div>
  <div class="panel-body"><%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
  	<br/>
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %></div>
</div>
</div>